// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String   @id @default(cuid())
  privyId                 String   @unique
  email                   String?
  walletAddress           String?
  notificationPreferences Json? // { browser: boolean, email: boolean, webhook: boolean, webhookUrl?: string }
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  workspaces     Workspace[]
  layouts        Layout[]
  alerts         Alert[]
  journalEntries JournalEntry[]
  themes         Theme[]
  teamMembers    TeamMember[]
  templates      Template[]
  marketResearch MarketResearch[]
  comments       Comment[]

  @@index([privyId])
  @@index([walletAddress])
}

model Workspace {
  id        String        @id @default(cuid())
  userId    String
  name      String
  type      WorkspaceType @default(CUSTOM)
  locked    Boolean       @default(false)
  isDefault Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  layouts Layout[]
  team    Team?    @relation("WorkspaceTeam")

  @@index([userId])
  @@index([userId, isDefault])
}

enum WorkspaceType {
  SCALPING
  EVENT_DAY
  ARB_DESK
  RESEARCH
  CUSTOM
  TRADING
}

model Layout {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  name        String
  config      Json // React Grid Layout config + card configs
  isDefault   Boolean  @default(false)
  isShared    Boolean  @default(false)
  shareToken  String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([shareToken])
}

model Alert {
  id                    String    @id @default(cuid())
  userId                String
  name                  String
  conditions            Json // Alert conditions (multi-signal)
  actions               Json // Actions (notify, staged order, webhook)
  isActive              Boolean   @default(true)
  cooldownPeriodMinutes Int? // Cooldown period in minutes (null = no cooldown)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  lastTriggered         DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isActive])
}

model JournalEntry {
  id          String   @id @default(cuid())
  userId      String
  marketId    String?
  timestamp   DateTime
  note        String
  attachments Json? // Chart annotations, links
  postMortem  Json? // Auto-generated on resolution
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@index([timestamp])
}

model Theme {
  id        String   @id @default(cuid())
  userId    String
  name      String
  config    Json // Theme JSON (colors, fonts, spacing)
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic])
}

model Team {
  id          String   @id @default(cuid())
  workspaceId String   @unique
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace    @relation("WorkspaceTeam", fields: [workspaceId], references: [id], onDelete: Cascade)
  members   TeamMember[]

  @@index([workspaceId])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Template {
  id          String   @id @default(cuid())
  userId      String? // Nullable for default/system templates
  name        String
  description String?
  config      Json // Workspace layout config (cards, positions, etc.)
  isPublic    Boolean  @default(false)
  isDefault   Boolean  @default(false) // System-provided default templates
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic])
  @@index([isDefault])
}

model MarketResearch {
  id                  String   @id @default(cuid())
  userId              String
  marketId            String
  marketQuestion      String
  verdict             String // YES, NO, UNCERTAIN
  confidence          Float
  result              Json // Full MarketResearchResult JSON
  intermediateResults Json? // Intermediate agent outputs for debugging
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@index([createdAt])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@index([createdAt])
  @@index([marketId, createdAt])
}
